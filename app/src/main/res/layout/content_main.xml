<?xml version="1.0" encoding="utf-8"?>
<TableLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/app_bar_main"
        android:gravity="center"
        tools:context=".MainActivity">

    <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
    >
        <Button
                android:id="@+id/button1_Id"
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:textSize="24sp"
                android:onClick="onButtonClick"
        />
        <Button
                android:id="@+id/button2_Id"
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:textSize="24sp"
                android:onClick="onButtonClick"
        />
        <Button
                android:id="@+id/button3_Id"
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:textSize="24sp"
                android:onClick="onButtonClick"
        />
    </TableRow>

    <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
    >
        <Button
                android:id="@+id/button4_Id"
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:textSize="24sp"
                android:onClick="onButtonClick"
        />
        <Button
                android:id="@+id/button5_Id"
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:textSize="24sp"
                android:onClick="onButtonClick"
        />
        <Button
                android:id="@+id/button6_Id"
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:textSize="24sp"
                android:onClick="onButtonClick"
        />
    </TableRow>

    <TableRow
            android:layout_height="match_parent"
            android:gravity="center"
    >
        <Button
                android:id="@+id/button7_Id"
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:textSize="24sp"
                android:onClick="onButtonClick"
        />
        <Button
                android:id="@+id/button8_Id"
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:textSize="24sp"
                android:onClick="onButtonClick"
        />
        <Button
                android:id="@+id/button9_Id"
                android:layout_width="40pt"
                android:layout_height="40pt"
                android:textSize="24sp"
                android:onClick="onButtonClick"
        />
    </TableRow>

</TableLayout>